<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/list_icon_width"
            android:layout_marginLeft="@dimen/list_icon_margin_left"
            android:layout_marginRight="@dimen/list_icon_margin_right"
            android:layout_height="@dimen/list_icon_height"
            android:scaleType="centerInside"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTxt"
            android:gravity="center_vertical"
            android:textSize="@dimen/list_text_size"
            android:layout_weight="1"
            android:text="" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/list_right_arrow_width"
            android:layout_height="@dimen/list_right_arrow_height"
            android:layout_marginRight="@dimen/list_right_arrow_margin_right"
            android:gravity="center"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/border"
        style="@style/formborder"
        android:layout_marginLeft="@dimen/list_spacelinear_margin_left"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>