<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <gradient
                android:startColor="#ff5500"
                android:endColor="#fc8d56"
                android:angle="90" />           
            <corners
                android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="#dddddd" />
        </shape>
    </item>
   <!-- focus -->
   <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#ff5500"
                android:endColor="#fc8d56"
                android:angle="90" />            
            <corners
                android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="#dddddd" />
        </shape>
    </item>
<!-- default -->
    <item>        
        <shape>
            <gradient
                android:startColor="#fc8d56"
                android:endColor="#ff5500"
                android:angle="90" />
            <corners
                android:radius="5dp" />
            
             <stroke
                android:width="1dp"
                android:color="#dddddd" />
        </shape>
    </item>
</selector>