<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/actiontop" />

    <ScrollView style="@style/contentActivity" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- 用户名 -->

                <LinearLayout style="@style/bottom_top_border" >

                    <RelativeLayout style="@style/field" >

                        <TextView
                            android:id="@+id/textView1"
                            style="@style/label"
                            android:text="@string/username" />

                        <EditText
                            android:id="@+id/username"
                            style="@style/commonEditText"
                            android:layout_toRightOf="@+id/textView1"
                            android:hint="@string/username_hint"
                            android:inputType="text" >
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    style="@style/field_tips"
                    android:text="@string/username_tips" />

                <!-- 邮箱 -->

                <LinearLayout style="@style/bottom_top_border" >

                    <RelativeLayout style="@style/field" >

                        <TextView
                            android:id="@+id/textView2"
                            style="@style/label"
                            android:text="@string/email" />

                        <EditText
                            android:id="@+id/email"
                            style="@style/commonEditText"
                            android:layout_toRightOf="@+id/textView2"
                            android:hint="@string/email_hint"
                            android:inputType="textEmailAddress" >
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    style="@style/field_tips"
                    android:text="@string/email_tips" />

                <!-- 密码 -->

                <LinearLayout style="@style/bottom_top_border" >

                    <RelativeLayout style="@style/field" >

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/label"
                            android:text="@string/password" />

                        <EditText
                            android:id="@+id/password"
                            style="@style/commonEditText"
                            android:layout_toRightOf="@+id/textView3"
                            android:hint="@string/password_hint"
                            android:inputType="textPassword" >
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    style="@style/field_tips"
                    android:text="@string/password_tips" />

                <!-- 确认密码 -->

                <LinearLayout style="@style/bottom_top_border" >

                    <RelativeLayout style="@style/field" >

                        <TextView
                            android:id="@+id/textView4"
                            style="@style/label"
                            android:text="@string/cpassword" />

                        <EditText
                            android:id="@+id/cpassword"
                            style="@style/commonEditText"
                            android:layout_toRightOf="@+id/textView4"
                            android:hint="@string/cpassword_hint"
                            android:inputType="text" >
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    style="@style/field_tips"
                    android:text="@string/cpassword_tips" />
            </LinearLayout>

            <Button
                android:id="@+id/submitRegister"
                style="@style/primaryBtn"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="@string/ok" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>