<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="commonActivity">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#f7f7f7</item>
    </style>

    <style name="field">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="imgCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="topBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">#3a404b</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="form">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="link">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#2681d7</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="mulLineTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="label">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 上下各有一条灰色边框 -->
    <style name="box1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/box1_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/form_border_height</item>
        <item name="android:paddingBottom">@dimen/form_border_height</item>
    </style>

    <!-- 一条细线 -->
    <style name="field_separator">
        <item name="android:background">@color/spacelinear</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/form_border_height</item>
    </style>

    <!-- textarea -->
    <style name="textarea">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_height</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- 输入文本域 -->
    <style name="commonEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/normalTxt</item>
        <item name="android:background">@null</item>
    </style>
    <!-- 主按钮 -->
    <style name="primaryBtn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/normal_btn_height</item>
        <item name="android:textSize">@dimen/normal_btn_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_btn</item>
    </style>
    
    <!-- 次按钮 -->
    <style name="negativeButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/normal_btn_height</item>
        <item name="android:textSize">@dimen/normal_btn_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/negative_btn_bg</item>
    </style>
    <!-- 字段提示 -->
    <style name="field_tips">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/normalSpace</item>
        <item name="android:layout_marginTop">@dimen/normal_filed_tips_margin_top</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/filed_tips_txt</item>
        <item name="android:textSize">@dimen/normal_filed_tips_text_size</item>
    </style>

    <!-- 内容容器 -->
    <style name="container">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/containerBg</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- 返回按钮 -->
    <style name="back">
        <item name="android:layout_width">@dimen/back_btn_width</item>
        <item name="android:layout_height">@dimen/back_btn_height</item>
        <item name="android:background">@drawable/back</item>
    </style>

    <!-- 弹层 -->
    <style name="popupDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/popupdialog_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- tabview -->
    <style name="tab">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#fefefe</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#888b92</item>
    </style>

    <style name="BaseDialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 自定义dialog -->
    <style name="BaseDialogBackground">
        <item name="android:background">@drawable/basedialog_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BaseDialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseDialogContentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BaseDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 圆角文本框 -->
    <style name="round_edit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/normalTxt</item>
        <item name="android:background">@drawable/round_edit_bg</item>
    </style>
    
    <!-- 单选按钮 -->
    <style name="radio_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/base_radio</item>
        <item name="android:textColor">@color/normalTxt</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">22dp</item>
    </style>
    
    <!-- 下拉框 -->
    <style name="spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/normalTxt</item>
        <item name="android:textSize">16sp</item>
    </style>
    
</resources>